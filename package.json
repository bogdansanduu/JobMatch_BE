{
  "name": "thesis_project",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "ts:check": "tsc --noEmit",
    "dev": "nodemon --watch './**/*.ts' --exec 'ts-node' src/index.ts | pino-pretty",
    "start": "NODE_ENV=production npm run build && tsx build/src/index.js",
    "lint": "eslint --fix --ext .ts,.js src/ tests/",
    "format": "prettier --write 'src/**/*.{ts,js,json}' 'tests/**/*.{ts,js,json}'"
  },
  "keywords": [],
  "author": "Bogdan Sandu",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.2",
    "mysql2": "^3.9.2",
    "pino-http": "^9.0.0",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "lint-staged": "^15.2.2",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "**/*.{ts,js,json}": [
      "npm run lint",
      "npm run format"
    ],
    "src/**/*.{ts,js,json}": "npm run format",
    "tests/**/*.{ts,js,json}": "npm run format"
  },
  "description": "Thesis project for the UTCN AC"
}
